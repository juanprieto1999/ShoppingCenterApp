<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ShoppingCenterApp.signin">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <TableView>
                <TableView.Root>
                    <TableSection Title="Usuario y Contraseña">
                        <EntryCell Placeholder="Usuario" Label="user@user.com.." />
                        <ViewCell>
                            <Entry Placeholder="Contraseña" IsPassword="true" />
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Datos Basicos">
                        <EntryCell Label="Nombres" />
                        <EntryCell Label="Apellidos" />
                        <EntryCell Label="Telefono" Placeholder="(310)000-0000" Keyboard="Telephone" />
                        <EntryCell Label="Direccion" />
                    </TableSection>
                </TableView.Root>
                                           
                           
            </TableView>
            <Button Text="Registrarse" Clicked="Handle_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>